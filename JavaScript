const config = {
    width: 1344,
    height: 756,
    type : Phaser.AUTO,
    physics: {
        default: 'arcade',
        arcade: {
            gravity: {y: 0}

        }
    },
    scene: {
        preload: preload,
        create: create,
        update: update,
    }
}

var game = new Phaser.Game(config)
let barre
let cursors


function preload() {
    this.load.image('barre', 'images/barre blanche.jpg');
    this.load.image('ball', 'https://labs.phaser.io/assets/sprites/shinyball.png');

}

function create() {

    barre = this.physics.add.image(30, 30, 'barre')
    barre.body.collideWorldBounds = true;
    ball = this.physics.add.sprite(400, 300, 'ball');
    ball.setCollideWorldBounds(true);
    ball.body.setBounce(1);
    ball.body.setVelocity(500, 500);
    this.physics.add.collider(ball, barre);

    cursors = this.input.keyboard.createCursorKeys();
    console.log(cursors)




}

function update(){
    barre.setVelocityX(0)

    barre.setVelocityY(0)



    if(cursors.up.isDown){
        barre.setVelocity(0, -500)

    }
    if(cursors.down.isDown){
        barre.setVelocity(0, 500)

    }
}
